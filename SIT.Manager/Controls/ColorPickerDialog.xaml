<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="SIT.Manager.Controls.ColorPickerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SIT.Manager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Color Picker"
    FullSizeDesired="False"
    Height="300">

    <StackPanel>
        <ColorPicker Name="ColorPickerControl" ColorSpectrumShape="Ring" IsColorPreviewVisible="False" IsColorChannelTextInputVisible="False" IsHexInputVisible="False" IsMoreButtonVisible="False"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="ColorPickerCancelButton" Content="Cancel" Margin="0,0,10,0" Click="ColorPickerControlCancelButton"/>
            <Button Name="ColorPickerSelectButton" Content="Select" Margin="0,0,10,0" Click="ColorPickerControlSelectButton"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>
