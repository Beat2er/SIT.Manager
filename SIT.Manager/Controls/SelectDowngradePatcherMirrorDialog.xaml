<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="SIT.Manager.Controls.SelectDowngradePatcherMirrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SIT.Manager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Downgrade required"
    FullSizeDesired="False"
    IsPrimaryButtonEnabled="True"
    PrimaryButtonText="Download"
    CloseButtonText="Cancel"
    Height="150">

    <StackPanel>
        <TextBlock Text="Escape from Tarkov must be downgraded to be compatible with SIT." Margin="5" TextWrapping="Wrap"/>
        <TextBlock Text="Select a mirror:" Margin="5"/>
        <ComboBox Width="500" Name="MirrorBox" VerticalAlignment="Center" HorizontalAlignment="Center" SelectionChanged="MirrorBox_SelectionChanged" SelectedValuePath="Value" DisplayMemberPath="Key"/>
    </StackPanel>
</ContentDialog>
